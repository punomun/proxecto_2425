<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vibragenda"
        tools:targetApi="31">
        <activity
            android:name="com.angelhazmato.vibragenda.vista.ExcepcionActivity"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.crud.GestionarEvento"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.AjustesVista"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.crud.GestionarArtista"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.entidad.EventosVista"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.entidad.EventoVista"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.entidad.ArtistaVista"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.entidad.ArtistasVista"
            android:exported="false" />
        <activity
            android:name="com.angelhazmato.vibragenda.vista.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>